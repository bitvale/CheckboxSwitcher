<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.bitvale.checkboxswitcher.CheckboxSwitcher
            android:id="@+id/switcher_one"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/checkbox_size"
            android:layout_marginBottom="@dimen/margin_medium"
            android:checked="true"
            app:layout_constraintBottom_toTopOf="@+id/switcher_two"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

    <com.bitvale.checkboxswitcher.CheckboxSwitcher
            android:id="@+id/switcher_two"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/checkbox_size"
            android:layout_marginTop="@dimen/margin_medium"
            app:thumb_on_color="@color/on_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switcher_one"/>

</androidx.constraintlayout.widget.ConstraintLayout>